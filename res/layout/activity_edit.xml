<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity"
    android:columnCount="1"
    android:rowCount="3"
    >


    <LinearLayout
        android:orientation="horizontal"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Save"
            android:id="@+id/save"
            android:onClick="saveGame"
            android:fontFamily="@font/newfont"/>

        <!--
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shapeMenu">


        </Spinner>
        -->

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Page"
            android:id="@+id/menu3"
            android:onClick="pageMenuPop"
            android:textSize="12dp"
            android:fontFamily="@font/newfont"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Script"
            android:id="@+id/menu"
            android:onClick="scriptMenuPop"
            android:textSize="12dp"
            android:fontFamily="@font/newfont"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Shape"
            android:id="@+id/menu2"
            android:onClick="shapeMenuPop"
            android:textSize="12dp"
            android:fontFamily="@font/newfont"/>
    </LinearLayout>



    <com.example.bunnyworld.CustomViewEditor
        android:id="@+id/customviewEditor"
        android:layout_gravity="fill"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_column="0"
        android:layout_row="2"
        />



</GridLayout>